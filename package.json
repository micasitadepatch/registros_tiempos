{
    "name": "registros-tiempos-backend",
    "version": "1.0.0",
    "description": "Backend para el sistema de fichajes con SQLite.",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "node --watch server.js",
        "seed": "node seed.js",
        "format": "prettier --write \"**/*.{js,json,md,html,css}\"",
        "backup": "node backup.js",
        "backup:schedule": "node -e \"setInterval(() => require('./backup.js')(), 24 * 60 * 60 * 1000)\""
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^4.19.2",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.13",
        "sqlite3": "^5.1.7"
    },
    "devDependencies": {
        "prettier": "^3.2.5"
    }
}
